<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_rounded_corners">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/closeImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_icon_2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"/>
        <LinearLayout
            android:id="@+id/tempView1"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                android:background="#7FE1EE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:text="Request Details"
                android:layout_marginEnd="5dp"
                android:textSize="22sp"
                tools:ignore="HardcodedText" />


            <View
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="15dp"
                android:background="#7FE1EE" />
        </LinearLayout>

        <ImageView
            android:id="@+id/teacherImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/teacher_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tempView1"/>

        <TextView
            android:id="@+id/teacherTextViewTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tempView1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:text="Teacher Name : "
            android:layout_toEndOf="@id/teacherImageView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teacherNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tempView1"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/teacherTextViewTemp"
            android:textColor="#1A8E9E"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/coursesImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/courses_icon"
            android:layout_below="@id/teacherNameTextView"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/coursesTextViewTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses : "
            android:textSize="16sp"
            android:layout_below="@id/teacherNameTextView"
            android:layout_toEndOf="@id/coursesImageView"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/coursesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/teacherNameTextView"
            android:layout_toEndOf="@id/coursesTextViewTemp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:textColor="#1A8E9E"/>

        <ImageView
            android:id="@+id/locationMethodImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/location_icon"
            android:layout_below="@id/coursesTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/locationTextViewTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location : "
            android:textSize="16sp"
            android:layout_below="@id/coursesTextView"
            android:layout_toEndOf="@id/locationMethodImageView"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/coursesTextView"
            android:layout_toEndOf="@id/teachingMethodTextViewTemp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp"
            android:textColor="#1A8E9E"/>

        <ImageView
            android:id="@+id/priceImageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/locationTextView"
            android:layout_toEndOf="@id/profileImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/price_icon"/>
        <TextView
            android:id="@+id/priceViewTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Price Per Hour :"
            android:layout_toEndOf="@id/priceImageView"
            android:layout_marginStart="8dp"
            android:layout_below="@id/locationTextView"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toEndOf="@id/priceViewTemp"
            android:layout_below="@id/locationTextView"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:textColor="#1A8E9E"
            android:layout_marginEnd="20dp"
            />


        <LinearLayout
            android:id="@+id/tempView2"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceTextView"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                android:background="#7FE1EE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:text="Children Details"
                android:layout_marginEnd="5dp"
                android:textSize="22sp"
                tools:ignore="HardcodedText" />


            <View
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="15dp"
                android:background="#7FE1EE" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chooseChildLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_margin="15dp"
            android:layout_below="@id/tempView2"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_child_text"
                android:textSize="20sp"

                />
            <Spinner
                android:id="@+id/childrenSpinner"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:spinnerMode="dropdown"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addChildBtn"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/unreadColor"
                android:textAllCaps="false"
                android:layout_marginStart="25dp"
                android:text="Add Child"/>
        </LinearLayout>


      <!--  <LinearLayout
            android:id="@+id/addChildBtnLayout"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@id/chooseChildLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="-30dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addChildBtn"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/unreadColor"
                android:textAllCaps="false"
                android:text="Add Child"/>
        </LinearLayout>-->

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/childrenFlexBoxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chooseChildLayout"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:padding="8dp"
            app:alignContent="flex_start"
            app:flexWrap="wrap"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmRequestToSendToTeacherBtn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/usedColor"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:text="Confirm Request"
            android:layout_below="@id/childrenFlexBoxLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>
</ScrollView>