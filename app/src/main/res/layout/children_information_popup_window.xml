<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childrenLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#F2ECF6"
    android:background="@drawable/rounded_corners">

    <ImageView
        android:id="@+id/closeImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close_icon_2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        />


    <LinearLayout
        android:id="@+id/childInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/child_information_text"
            android:textSize="22sp" />


        <View
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/childNameText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/childInformation"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="32dp"
        app:hintEnabled="true"
        android:hint="Child Name"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:startIconDrawable="@drawable/firstname_icon"
        app:errorIconDrawable="@drawable/baseline_error_24"
        app:errorTextAppearance="@style/error_text"
        app:hintTextAppearance="@style/CustomHintTextAppearance"
        >

        <EditText
            android:id="@+id/childNameEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="text"
            android:maxLength="25"
            android:background="@drawable/edit_text_style" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ageText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/childNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        app:hintEnabled="true"
        android:hint="Age"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:startIconDrawable="@drawable/age_icon"
        app:errorIconDrawable="@drawable/baseline_error_24"
        app:errorTextAppearance="@style/error_text"
        app:hintTextAppearance="@style/CustomHintTextAppearance"
        >
        <EditText
            android:id="@+id/childAgeEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:inputType="number"
            android:maxLength="2"
            android:background="@drawable/edit_text_style"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/genderSpinnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/ageText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Gender"
            android:textSize="20sp"
            />
        <Spinner
            android:id="@+id/childGenderSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:entries="@array/childGender"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gradeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/genderSpinnerLayout"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Grade "
            android:textSize="20sp"
            />
        <Spinner
            android:id="@+id/childGrade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:entries="@array/childGrade"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addChildBtn"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/usedColor"
        android:text="Add Child"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_below="@id/gradeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>