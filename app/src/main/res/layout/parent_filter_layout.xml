<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#F4F5F6"
    android:background="@drawable/rounded_corners">

    <ImageView
        android:id="@+id/closeImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close_icon_2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:id="@+id/locationTextViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_below="@id/closeImage"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="Location"
            android:paddingEnd="2dp"
            android:textSize="24sp" />


        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/locationTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_centerHorizontal="true"
        android:hint="Location"
        app:endIconMode="clear_text"
        android:layout_below="@id/locationTextViewTemp"
        app:hintTextAppearance="@style/CustomHintTextAppearance"
        app:startIconDrawable="@drawable/location_icon">

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_style"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/locationFlexBox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTextInputLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_centerHorizontal="true"
        android:padding="2dp"
        app:alignContent="flex_start"
        app:flexWrap="wrap"/>

    <LinearLayout
        android:id="@+id/coursesTextViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationFlexBox1"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:layout_marginTop="15dp"
        android:paddingEnd="4dp">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="Courses"
            android:paddingEnd="2dp"
            android:textSize="24sp" />


        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/coursesTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_centerHorizontal="true"
        android:hint="Courses"
        app:endIconMode="clear_text"
        android:layout_below="@id/coursesTextViewTemp"
        app:hintTextAppearance="@style/CustomHintTextAppearance"
        app:startIconDrawable="@drawable/courses_icon">

        <EditText
            android:id="@+id/coursesEditText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/edit_text_style"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/coursesFlexBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursesTextInputLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:padding="2dp"
        app:alignContent="flex_start"
        app:flexWrap="wrap"/>

    <LinearLayout
        android:id="@+id/childrenTextViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/coursesFlexBox"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:layout_marginTop="15dp"
        android:paddingEnd="4dp">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="Children Gender"
            android:paddingEnd="2dp"
            android:textSize="24sp" />


        <View
            android:layout_width="260dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/childrenGenderFlexBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/childrenTextViewTemp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:padding="2dp"
        app:alignContent="flex_start"
        android:layout_centerHorizontal="true"
        app:flexWrap="wrap"/>

    <LinearLayout
        android:id="@+id/gradeTextViewTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/childrenGenderFlexBox"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:layout_marginTop="15dp"
        android:paddingEnd="4dp">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="Children Grade"
            android:paddingEnd="2dp"
            android:textSize="24sp" />


        <View
            android:layout_width="260dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/childrenGradeFlexBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradeTextViewTemp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:padding="2dp"
        app:alignContent="flex_start"
        android:layout_centerHorizontal="true"
        app:flexWrap="wrap"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filterConfirmBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/childrenGradeFlexBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/usedColor"
        android:text="Filter"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/filterCancelBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/childrenGradeFlexBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/usedColor"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>

</ScrollView>