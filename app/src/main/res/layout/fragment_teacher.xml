<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/employerFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#2196F3"
    android:fitsSystemWindows="true">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/teacherFragmentSearch"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:hint="@string/search_for_job"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addedCoursesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="634dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.166" />
    <TextView
        android:id="@+id/pleaseConfirmAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacherFragmentSearch"
        android:layout_centerInParent="true"
        android:layout_marginTop="330dp"
        android:text="@string/please_confirm_your_account_msg"
        android:textColor="#7E7A7A"
        android:textSize="20sp"
        android:visibility="gone"/>
</RelativeLayout>