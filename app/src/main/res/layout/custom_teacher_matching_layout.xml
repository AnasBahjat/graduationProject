<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corners_recycler_view">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="child Grade :"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/childGradeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="10"
            android:textColor="#1A8E9E"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/childGradeTextView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:text="Courses :"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/coursesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/childGradeTextView"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/textView7"
            android:text="Math , Physics , science "
            android:textColor="#1A8E9E"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursesTextView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            android:text="Each : "
            android:textSize="21sp" />

        <TextView
            android:id="@+id/eachDaysTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursesTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/textView6"
            android:text="Tues , Wed , Mon"
            android:textColor="#1A8E9E"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eachDaysTextView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:text="Location : "
            android:textSize="21sp" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eachDaysTextView"
            android:layout_marginStart="130dp"
            android:layout_marginTop="2dp"
            android:text="Ramallah City"
            android:textColor="#1A8E9E"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationTextView"
            android:layout_marginStart="20dp"

            android:layout_marginTop="3dp"
            android:text="Time :"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationTextView"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp"
            android:text="12:00 PM - 2:00 PM"
            android:textColor="#1A8E9E"
            android:textSize="21sp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>