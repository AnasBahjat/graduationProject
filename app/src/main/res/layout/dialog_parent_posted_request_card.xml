<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_rounded_corners">

    <ImageView
        android:id="@+id/closeImageView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/close_icon_2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/childNameTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/profileImageView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:text="Child Name : "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/childNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/childNameTextViewTemp"
        android:textColor="#1A8E9E"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/parentNameTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/childNameTextView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profileImageView"
        android:layout_marginTop="10dp"
        android:text="Parent Name : "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/parentNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childNameTextView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/parentNameTextViewTemp"
        android:textColor="#1A8E9E"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/parentPhoneNumberTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentNameTextView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profileImageView"
        android:layout_marginTop="10dp"
        android:text="Parent Phone : "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/parentPhoneNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentNameTextView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/parentNameTextViewTemp"
        android:textColor="#1A8E9E"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/parentEmailTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentPhoneNumberTextView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profileImageView"
        android:layout_marginTop="10dp"
        android:text="Parent Email : "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/parentEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentPhoneNumberTextView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/parentNameTextViewTemp"
        android:textColor="#1A8E9E"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/tempView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/parentEmailTextView"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="Additional Information"
            android:textSize="22sp" />


        <View
            android:layout_width="190dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>

    <ImageView
        android:id="@+id/coursesImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/courses_icon"
        android:layout_below="@id/tempView1"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/coursesTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Courses : "
        android:textSize="16sp"
        android:layout_below="@id/tempView1"
        android:layout_toEndOf="@id/coursesImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/coursesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tempView1"
        android:layout_toEndOf="@id/coursesTextViewTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="#1A8E9E"/>

    <ImageView
        android:id="@+id/choseDaysImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/days_icon"
        android:layout_below="@id/coursesTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/choseDaysTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days : "
        android:textSize="16sp"
        android:layout_below="@id/coursesTextView"
        android:layout_toEndOf="@id/coursesImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/choseDaysTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/coursesTextView"
        android:layout_toEndOf="@id/choseDaysTextViewTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="#1A8E9E"/>

    <ImageView
        android:id="@+id/teachingMethodImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/teaching_method_icon_2"
        android:layout_below="@id/choseDaysTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/teachingMethodTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teaching Method : "
        android:textSize="16sp"
        android:layout_below="@id/choseDaysTextView"
        android:layout_toEndOf="@id/teachingMethodImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/teachingMethodTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/choseDaysTextView"
        android:layout_toEndOf="@id/teachingMethodTextViewTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="#1A8E9E"/>


    <ImageView
        android:id="@+id/timeImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/clock_icon"
        android:layout_below="@id/teachingMethodTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/timeTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : "
        android:textSize="16sp"
        android:layout_below="@id/teachingMethodTextView"
        android:layout_toEndOf="@id/timeImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/teachingMethodTextView"
        android:layout_toEndOf="@id/timeTextViewTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="#1A8E9E"
        />

    <ImageView
        android:id="@+id/locationImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/location_icon"
        android:layout_below="@id/timeTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/locationTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location : "
        android:textSize="16sp"
        android:layout_below="@id/timeTextView"
        android:layout_toEndOf="@id/locationImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/timeTextView"
        android:layout_toEndOf="@id/locationTextViewTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="#1A8E9E"
        />

    <ImageView
        android:id="@+id/priceImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/price_icon"
        android:layout_below="@id/locationTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/priceTextViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Range : "
        android:textSize="16sp"
        android:layout_below="@id/locationTextView"
        android:layout_toEndOf="@id/priceImageView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/locationTextView"
        android:layout_toEndOf="@id/priceTextViewTemp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="10dp"
        android:textColor="#1A8E9E"
        android:layout_marginBottom="30dp"
        />


    <ImageView
        android:id="@+id/cardSettings"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/more_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp" />


</RelativeLayout>