<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_dialog"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/closeTheDialog"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/close_icon_2"
        android:contentDescription="@string/close_popup_window_msg" />

    <LinearLayout
        android:id="@+id/SpecificTeacherHeader"
        android:layout_width="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="#7FE1EE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:text="Request Details"
            android:layout_marginEnd="5dp"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />


        <View
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:background="#7FE1EE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chooseCoursesLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_below="@id/SpecificTeacherHeader"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"
            />
        <Spinner
            android:id="@+id/coursesSpinner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:spinnerMode="dropdown"
            android:entries="@array/allCoursesArray"
            android:layout_gravity="center"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addCourseMatchingTeacherBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/add_course_text"
            android:textAllCaps="false"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/gray"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/coursesFlexBoxLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseCoursesLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        app:alignContent="flex_start"
        app:flexWrap="wrap" />

    <LinearLayout
        android:id="@+id/educationalLevelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/coursesFlexBoxLayout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="Education Level"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/educationalLevelSpinner"
            android:layout_width="210dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_gravity="center"
            android:entries="@array/teacherEducationLevel"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/durationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/educationalLevelLayout"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textSize="20sp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginStart="20dp"
            app:hintEnabled="true"
            android:hint="Number Of Months"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/baseline_error_24"
            app:endIconMode="clear_text"

            >
            <EditText
                android:id="@+id/numberOfMonthsEdtText"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:maxLength="2"
                android:background="@drawable/edit_text_style"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/durationLayout"
        android:layout_marginStart="27dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Location"/>
        <Spinner
            android:id="@+id/locationSpinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:spinnerMode="dropdown"
            android:entries="@array/locationArray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationLayout"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Teaching Method"
            android:layout_gravity="center"/>
        <Spinner
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"
            android:entries="@array/locationArray"/>
    </LinearLayout>



</RelativeLayout>